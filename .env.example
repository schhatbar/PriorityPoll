# Database Configuration
# For local PostgreSQL without SSL:
DATABASE_URL=postgres://postgres:your_password@localhost:5432/polling_app?sslmode=disable
# For hosted PostgreSQL with SSL:
# DATABASE_URL=postgres://postgres:your_password@localhost:5432/polling_app?sslmode=require

# Session Secret (generate a strong random string)
SESSION_SECRET=replace_with_a_strong_random_string

# Application Environment
NODE_ENV=development

# Database Connection Type (standard for local PostgreSQL, you can remove for Neon)
NEON_CONNECTION_TYPE=standard

# Port Configuration (default is 5000)
PORT=5000